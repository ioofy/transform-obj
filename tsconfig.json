{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "declaration": false,
    "moduleResolution": "node",
    "target": "es2018",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
